# Declar Path
PATH=$PATH

# Profile Setting for Linux, expecailly in Ubuntu
if [[ -s ~/.profile ]]; then
      source ~/.profile
fi

# Transcend JetDrive Lite 330 SDCX Card
if [[ -d "~/JetDrive" ]]; then
	EXT_JET_DRIVE=~/JetDrive
else
	EXT_JET_DRIVE=/Volumes/Transcend
fi

# Dev Lib Directory
EXT_JET_DEV_DIR=$EXT_JET_DRIVE/Dev

# Android SDK
# Android SDK Directory
EXT_JET_ANDROID_SDK_DIR=$EXT_JET_DEV_DIR/Android/ADT-Bundle/sdk

# Add Android SDK Tools Directory To Path 
if [[ -d $EXT_JET_ANDROID_SDK_DIR ]]; then
	PATH=$PATH:$EXT_JET_ANDROID_SDK_DIR/tools:$EXT_JET_ANDROID_SDK_DIR/platform-tools
fi


# NodeJs
# Node Version Manager Directory
NVM_DIR=~/.nvm
if type -p brew > /dev/null; then
       NVM_LIB_DIR=$(brew --prefix nvm)
else
       NVM_LIB_DIR=$NVM_DIR
fi

# Source NVM
if [[ -s $NVM_LIB_DIR/nvm.sh ]]; then
      source $NVM_LIB_DIR/nvm.sh

	# NVM Completion
	if [[ -r $NVM_LIB_DIR/etc/bash_completion.d/nvm ]]; then
		source $NVM_LIB_DIR/etc/bash_completion.d/nvm
	fi

	# Use Stable NodeJs
	nvm use stable > /dev/null 2>&1

	# NPM Completion
      if type -p npm > /dev/null; then
            NODE_DIR=$(npm get prefix)
            NPM_DIR=$NODE_DIR/lib/node_modules/npm

            if [[ -r $NPM_DIR/lib/utils/completion.sh ]]; then
                  source $NPM_DIR/lib/utils/completion.sh
            fi
      fi
fi

# Export Path to Environment
export PATH
